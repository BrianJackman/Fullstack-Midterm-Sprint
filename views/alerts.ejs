<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu Alerts</title>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>
  <body>
    <main class="main-content">
      <h1>Menu Alerts</h1>
      <p>This page displays special menu alerts for all of the restaurants.</p>
      <ul>
        <% restaurants.forEach(restaurant => { %>
        <!-- Iterate over each restaurant -->
        <li>
          <h2><%= restaurant.name %></h2>
          <!-- Display the restaurant name -->
          <% if (restaurant.alerts && restaurant.alerts.length > 0) { %>
          <!-- Check if there are alerts -->
          <ul>
            <% restaurant.alerts.forEach(alert => { %>
            <!-- Iterate over each alert -->
            <li>
              <p><%= alert %></p>
              <!-- Display the alert -->
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p>No current alerts</p>
          <!-- Display message if no alerts -->
          <% } %>
        </li>
        <% }) %>
      </ul>
      <a href="/">Back to Home</a>
      <!-- Link to go back to the home page -->
    </main>
  </body>
</html>
